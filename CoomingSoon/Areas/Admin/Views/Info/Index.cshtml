@model HomeVM
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Info</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>LeftHead</th>
                                <th>LeftContent</th>
                                <th>RightContent</th>
                                <th>RightDownContent</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.Info.LeftHead</td>
                                <td>@Model.Info.LeftContent</td>
                                <td>@Model.Info.RightContent</td>
                                <td>@Model.Info.RightDownContent</td>
                            </tr>
                        </tbody>
                        <a asp-action="Update" asp-route-id="@Model.Info.Id">Update</a>
                        <form method="post" asp-action="Delete" asp-route-id="@Model.Info.Id " class="d-inline ml-3">
                            <button type="submit">Delete</button>
                        </form>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Option</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Options</th>
                                <th>Setting</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var option in Model.RightOptions)
                            {
                            <tr>
                                <td>@option.Option</td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@option.Id">Update</a>
                                    <form method="post" asp-action="Delete" asp-route-id="@option.Id" class="ml-2 d-inline" >
                                        <button type="submit">Delete</button>
                                    </form>
                                    
                                </td>
                            </tr>
                                    }
                               
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

